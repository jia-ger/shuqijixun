https://codeforces.com/contest/2132/problem/C2

#include <bits/stdc++.h>
using namespace std;
#define itn int
#define icn cin
#define int long long
#define endl '\n'
typedef pair<int,int> PII;
const int N=2e5+10;
const int INF=1e18;
const int mod=998244353;
#define ll __int128

int p[25];
void solve()
{   
 p[0]=1;
 for(int i=1;i<=20;i++)
 {
 	p[i]=p[i-1]*3;
 }
    int n, k;
    cin >> n >> k;
    vector<int> a;
    while (n) {
        a.push_back(n % 3);//把数字当成三进制来考虑！ 妙哉 
        k -= n % 3;
        n /= 3;
    }
    if (k < 0) {
        cout << -1 << "\n";
        return;
    }
    
    int ans = 0;
    
    for (int i = a.size() - 1; i > 0; i--) {
        int t =min(a[i], k / 2);
        a[i] -= t;
        a[i - 1] += t * 3; 
        k -= 2 * t;
    }
    
    for (int x = 0; x < a.size(); x++) {
        ans += a[x] * (p[x + 1] + x * p[x] / 3);
    }
    cout << ans << "\n";
} 


signed main(){
   cin.tie(0)->sync_with_stdio(0);	 
   int T=1; 
   cin>>T;
   while(T--)solve();
   
    return 0;
}
