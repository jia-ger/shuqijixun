#include <bits/stdc++.h>
using namespace std;
#define itn int
#define icn cin
#define int long long
#define endl '\n'
typedef pair<int,int> PII;
const int N=5e5+10;
const int INF=1e18;
const int mod=998244353;
#define ll __int128

int cnt[1000001],len,ans,k,d;
void solve()
{   
    cnt[0] = 1;
	string s;
	cin >> s;
	len = s.size();
	for( int i = 0 ; i < len ; i ++ )
	{
		k = s[i] - '0';
		k = 1 << k;
		d ^= k;
		ans += cnt[d];
		cnt[d] ++;
	}
	cout << ans;
  
  
} 


signed main(){
   cin.tie(0)->sync_with_stdio(0);	 
   int T=1; 
//   cin>>T;
   while(T--)solve();
   
    return 0;
}
